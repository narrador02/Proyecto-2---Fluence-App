<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background">

    <!-- Título -->
    <TextView
        android:id="@+id/dashboard_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu Dashboard"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="16dp" />

    <!-- Estadísticas (temporal: se puede reemplazar por gráficos o cards) -->
    <TextView
        android:id="@+id/estadisticas_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aquí verás tus ofertas activas, pendientes, finalizadas y métricas de colaboración"
        android:textSize="14sp"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="24dp" />

    <!-- Botón de volver al inicio o navegación -->
    <Button
        android:id="@+id/btn_volver_inicio"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Volver al inicio"
        android:background="@drawable/button_blue"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

</LinearLayout>