<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoFluence"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:adjustViewBounds="true"
            android:layout_marginBottom="24dp"/>

        <!-- Texto "Login" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicio de sesión"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="start"
            android:layout_marginBottom="16dp"/>

        <!-- Empresa o Influencer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empresa o Influencer:"
            android:textSize="14sp"
            android:textColor="#444"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerTipoUsuario"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_style"
            android:layout_marginBottom="16dp"
            android:padding="12dp"/>

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario o Email"
            android:textSize="14sp"
            android:textColor="#444"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduce tu email"
            android:textColor="#000"
            android:padding="12dp"
            android:background="@drawable/edit_text_style"
            android:layout_marginBottom="16dp"/>

        <!-- Contraseña -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textSize="14sp"
            android:textColor="#444"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduce tu contraseña"
            android:textColor="#000"
            android:padding="12dp"
            android:background="@drawable/edit_text_style"
            android:layout_marginBottom="24dp"
            android:inputType="textPassword"/>

        <!-- Botón -->
        <android.widget.Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar sesión"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/button_blue"
            android:layout_gravity="start"
            android:paddingHorizontal="32dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Enlaces -->
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Has olvidado tu contraseña?"
            android:textColor="#007BFF"
            android:textSize="12sp"
            android:gravity="start"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/registerLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No tengo cuenta. Registrarme"
            android:textColor="#007BFF"
            android:textSize="12sp"
            android:gravity="start"/>
    </LinearLayout>
</ScrollView>